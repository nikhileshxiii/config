function search_aud(){
    cd /home/$USER/aud && ls | grep -i $1;
}

function search_down(){
    cd /home/$USER/Downloads && ls | grep -i $1
}

function search_doc(){
    cd /home/$USER/Documents && ls | grep -i $1
}

function unmount(){
    udisksctl power-off -b $1
}

